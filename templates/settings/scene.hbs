<div class="tab general" data-tab="scenes">

    <div class="box header">
        <h1>{{localize "MeisterSettings.scenepacks"}}</h1>
        <div class="top-bar">
            <a class="insert-entry" data-path="scenes-collection"><i class="fas fa-plus-square"></i></a>
        </div>
        <p>{{localize "Help.Scenes.Packs"}}</p>
        <div id="scenes-collection">
            {{#each scenes.sceneCollections as |this n|}}
                <div class="inner box header">
                    <div class="top-bar">
                        <a class="sort-up"><i class="fas fa-sort-up"></i></a>
                        <a class="remove-entry"><i class="fas fa-trash-alt"></i></a>
                    </div>

                    <div class="form-group">
                        <label class="label-text">{{localize "MeisterSettings.Pack"}}</label>
                        <select name="scenes.sceneCollections[{{n}}].collection" class="autocomplete"
                                data-targets="name folder">
                            {{#select collection}}
                                <option></option>
                                {{#each ../scenePacks}}
                                    <option value="{{collection}}">{{metadata.label}} ({{collection}})</option>
                                {{/each}}
                            {{/select}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="label-text">{{localize "MeisterSettings.Name"}}</label>
                        <input type="text" value="{{name}}" name="scenes.sceneCollections[{{n}}].name"/>
                    </div>
                    <div class="form-group">
                        <label class="label-text">{{localize "MeisterSettings.Folder"}}</label>
                        <input type="text" value="{{folder}}" name="scenes.sceneCollections[{{n}}].folder"/>
                    </div>
                    <div class="form-group">
                        <label class="label-text">{{localize "MeisterSettings.Keywords"}}</label>
                        <input type="text" value="{{keywords}}" name="scenes.sceneCollections[{{n}}].keywords"/>
                    </div>
                    <div class="form-group">
                        <label class="label-text">{{localize "MeisterSettings.DynamicMap"}}</label>
                        <div>
                            <input {{checked isDynamicMap}} data-dtype="Boolean"
                                    class="switch" id="isDynamicMap-{{n}}" name="scenes.sceneCollections[{{n}}].isDynamicMap" type="checkbox"/>
                            <label for="isDynamicMap-{{n}}"></label>
                            <label for="isDynamicMap-{{n}}">{{localize "MeisterSettings.DynamicMap"}}</label>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

</div>
