            {{/each}}
            <b>(aktuell: {{user.name}})</b>
        </div>
    {{/if}}

    {{#if user.character}}
        <div class="box header"><h1>{{user.character.name}}</h1>
            <div class="col-2" style="grid-template-columns: 150px auto ">

                <div class="inner box">
                    <img src="{{user.character.img}}" style="border: none; width: 128px"/>
