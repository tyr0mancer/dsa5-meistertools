<div class="col-2" style="grid-template-columns: 250px auto">
    <div>
        {{#each options.ruleCategories}}
            <div class="inner box header">
                <h2>{{name}}</h2>
                <ul>
                    {{#each_when ../options.rules 'category' key}}
                        <li><a class="set-rule" data-rule-key="{{key}}"><i class="{{icon}}"></i> {{name}}</a></li>
                    {{/each_when}}
                </ul>
            </div>
        {{/each}}
    </div>
    <div class="box header float">
        <h1>{{rule.name}}</h1>

        {{#each rule.rollRequests as |request n|}}
            {{#with request}}
                <div class="inner box header">
                    <h2>{{comment}}</h2>
                    <div class="col-2">
                        <div class="float">
                            {{#ifeq target "Player"}}
                                {{#each ../options.players}}
                                    <div>
                                        <input id="actor-{{n}}-{{_id}}" type="radio" value="{{_id}}"
                                               name="target-{{n}}"/>
                                        <label for="actor-{{n}}-{{_id}}" style="background-image: url({{img}});"
                                        >{{name}}</label>
                                    </div>
                                {{/each}}
                            {{else}}
                                <b>Todo: Pick Actor</b>
                            {{/ifeq}}
                        </div>
                        <div>
                            <b>Modifier {{modifier}}</b> <button disabled>change</button>
                            <button class="request-roll">{{talent}}</button>
                        </div>

                    </div>
                    <p>{{{description}}}</p>
                </div>
            {{/with}}
        {{/each}}
    </div>
    <hr/>
    <textarea>{{stringify rule}}</textarea>
</div>
