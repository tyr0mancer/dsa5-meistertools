<div class="tab effects" data-tab="rarity">
    <div class="meistertools">

        <div class="form-group">
            <label class="label-text">{{localize "Availability.general"}}</label>
            <div style="padding-left: 5px"><a class="update-rarity" data-entry-key="general">{{display_rarity data.rarity.general "" true}}</a></div>
        </div>

        <div class="form-group">
            <label class="label-text">Regionen</label>
            <div style="padding-left: 5px">
                {{#each data.rarity.regions}}
                    <div><a class="update-rarity" data-entry-key="{{key}}" data-entry-category="{{category}}">{{display_rarity value name false}} {{name}}</a></div>
                {{/each}}
            </div>
        </div>

        <div class="form-group">
            <label class="label-text">Landschafts-Typen</label>
            <div style="padding-left: 5px">
                {{#each data.rarity.biomes}}
                    <div><a class="update-rarity" data-entry-key="{{key}}">{{display_rarity value name false}} {{name}}</a></div>
                {{/each}}
            </div>
        </div>

    </div>
</div>
