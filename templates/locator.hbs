<div class="meistertools">
    <div class="col-2">
        <div>
            {{#if locatorScene}}
                <button class="locate-token large" title="Sicht auf Locator Token in Karten-Szene zentrieren"><i
                        class="far fa-compass"></i></button>
            {{/if}}
        </div>
        <div>
            {{#if locatorScene}}
                <h3><b>Karte:</b> {{locatorScene.name}}</h3>
            {{else}}
                <p>Keine Szene als Karte gew채hlt</p>
            {{/if}}
            {{#if locatorToken}}
                <p><b>Token:</b> {{locatorToken.name}}</p>
            {{else}}
                <p>Kein Token gew채hlt</p>
            {{/if}}
        </div>
    </div>

    <div class="biome box" style="background: url({{currentLocation.currentBiome.img}})">
        <select name="biome" class="biome">
            {{#select currentLocation.currentBiome.key}}
                <option></option>
                {{#each biomes}}
                    <option value="{{key}}">{{name}}</option>
                {{/each}}
            {{/select}}
        </select>

        <div class="col-2">
            <div>
                <button class="pick-region large" title="Regionen manuell ausw채hlen"><i class="fas fa-edit"></i>
                </button>
            </div>
            <div class="region box">
                {{#each expandedRegions}}
                    <h2>{{name}}</h2>
                    {{#each regions}}
                        <span>{{name}}</span>
                    {{/each}}
                {{/each}}
            </div>
        </div>
    </div>

    <div class="col-2">
        <button class="open-parser wide" title="Regionen und Kartenzeichnungen"><i class="fas fa-cogs"></i></button>
        <div style="text-align: right">
            <button class="set-token wide" title="Das ausgew채hlte Token als Locator Token verwenden">
                <i class="fas fa-user-tag"></i></button>
            <!-- <button class="set-scene">set scene</button> -->
        </div>
    </div>

</div>
