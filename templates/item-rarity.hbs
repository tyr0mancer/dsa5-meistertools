<div class="tab effects" data-tab="rarity">
    <div class="meistertools">

        <div class="form-group">
            <label class="label-text">{{localize "Availability.general"}}</label>
            <select name="data.rarity.general" data-dtype="String">
                {{#select data.rarity.general}}
                    {{#each rarityOptions as |ch char|}}
                        <option value="{{char}}">{{localize ch}}</option>
                    {{/each}}
                {{/select}}
            </select>
        </div>

        <div class="form-group">
            <label class="label-text">Regionen</label>
            <div>
                {{#each data.rarity.regions}}
                    <div><a class="update-rarity" data-entry-key="{{key}}" data-entry-category="{{category}}">{{display_rarity value}} {{name}}</a></div>
                {{/each}}
            </div>
        </div>

        <div class="form-group">
            <label class="label-text">Landschafts-Typen</label>
            <div>
                {{#each data.rarity.biomes}}
                    <div><a class="update-rarity" data-entry-key="{{key}}">{{display_rarity value}} {{name}}</a></div>
                {{/each}}
            </div>
        </div>

    </div>
</div>
