<div class="tab effects meistertools" data-tab="rarity">
    <div class="meistertools">
        <div class="form-group">
            <label class="label-text">{{localize "Availability.general"}} <a class="reset-general-rarity"><i class='far fa-trash-alt'></i></a></label>
            <div style="padding-left: 5px"><a class="update-rarity" data-entry-key="general"><h3><b>{{display_rarity
                    data.rarity.general "" true}}</b></h3></a></div>
        </div>

        <div class="form-group">
            <label class="label-text">{{localize "Location.Regions"}} <a class="reset-regions-rarity"><i class='far fa-trash-alt'></i></a></label>
            <div style="padding-left: 5px">
                {{#each data.rarity.regions}}
                    <a class="update-rarity" data-entry-key="{{key}}" data-entry-category="{{category}}">
                        <div>{{display_rarity value name false}} {{name}}</div>
                    </a>
                {{/each}}
            </div>
        </div>

        <div class="form-group">
            <label class="label-text">{{localize "Location.Biomes"}} <a class="reset-biomes-rarity"><i class='far fa-trash-alt'></i></a></label>
            <div style="padding-left: 5px">
                {{#each data.rarity.biomes}}
                    <a class="update-rarity" data-entry-key="{{key}}">
                        <div>{{display_rarity value name false}} {{name}}</div>
                    </a>
                {{/each}}
            </div>
        </div>

        <hr/>

        <div class="inner box header">
            <h2>{{localize "Availability.current"}} </h2>
            <div class="top-bar">
                <b>{{display_rarity currentRarity "" true}}</b>
            </div>

            <div class="form-group">
                <label class="label-text">{{localize "Location.Biome"}}</label>
                <div style="padding-left: 5px">{{currentLocation.currentBiome.name}}</div>
            </div>
            <div class="form-group">
                <label class="label-text">{{localize "Location.Regions"}}</label>
                <div style="padding-left: 5px">
                    {{#each currentLocation.currentRegions}}
                        <div>
                            <b>{{name}}</b>:
                            {{#each regions}}
                                <span class="tag">{{name}}</span>
                            {{/each}}
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
