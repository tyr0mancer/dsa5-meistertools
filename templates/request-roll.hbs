<div class="col-2" style="grid-template-columns: 250px auto">
    <div>
        {{#each options.ruleCategories}}
            <div class="inner box header">
                <h2>{{name}}</h2>
                <ul>
                    {{#each_when ../options.rules 'category' key}}
                        <li><a class="set-rule" data-rule-key="{{key}}">{{name}}</a></li>
                    {{/each_when}}
                </ul>
            </div>
        {{/each}}
    </div>
    <div class="box header float">
        {{#with rule}}
            <h1>{{name}}</h1>
            {{#each input}}
                <div class="inner box">
                    {{stringify this}}
                </div>
            {{/each}}
            <button class="request-roll">Wurf anfordern</button>
        {{/with}}
    </div>
    <hr/>
    {{stringify rule}}
</div>
