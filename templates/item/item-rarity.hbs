<div class="tab effects" data-tab="rarity">
    <div class="meistertools">
        <div class="form-group">
            <label class="label-text">{{localize "Availability.general"}}</label>
            <div style="padding-left: 5px"><a class="update-rarity" data-entry-key="general"><h3><b>{{display_rarity
                    data.rarity.general "" true}}</b></h3></a></div>
        </div>

        <div class="form-group">
            <label class="label-text">Regionen</label>
            <div style="padding-left: 5px">
                {{#each data.rarity.regions}}
                    <a class="update-rarity" data-entry-key="{{key}}" data-entry-category="{{category}}">
                        <div>{{display_rarity value name false}} {{name}}</div>
                    </a>
                {{/each}}
            </div>
        </div>

        <div class="form-group">
            <label class="label-text">Landschafts-Typen</label>
            <div style="padding-left: 5px">
                {{#each data.rarity.biomes}}
                    <a class="update-rarity" data-entry-key="{{key}}">
                        <div>{{display_rarity value name false}} {{name}}</div>
                    </a>
                {{/each}}
            </div>
        </div>

        <hr/>

        <div class="form-group">
            <label class="label-text">{{localize "Location.current"}}</label>
            <div>
                <div style="padding-left: 5px">
                    <h3><b>{{currentLocation.currentBiome.name}}</b></h3>
                    {{#each currentLocation.currentRegions}}
                        <b>{{name}}</b>:
                        {{#each regions}}
                            <span class="tag">{{name}}</span>
                        {{/each}}
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="label-text">{{localize "Availability.current"}}</label>
            <div>
                <div style="padding-left: 5px"><h3><b>{{display_rarity data.rarity.current "" true}}</b></h3></div>
                <!--<div style="padding-left: 5px"><a>reset</a> <a>berechnen</a></div>-->
            </div>
        </div>
        <button class="reset-rarity" type="button">zur√ºcksetzen</button>
        <button class="calculate-rarity" type="button">berechnen</button>

    </div>
</div>
